 #include <iostream>
using namespace std;

int main()
{
    int vetor1[3], vetor2[3], vetor3[3], i;

    cout<<"Primeiro vetor \n\n";

    for(i = 0; i < 3; i++)
    {
        cout<<"Digite o valor: ";
        cin>>vetor1[i];
    }

    cout<<" \n Segundo Vetor \n\n";

    for(i = 0; i < 3; i++)
    {
        cout<<"Digite o valor: ";
        cin>>vetor2[i];
    }

    for(i = 0; i < 3; i++)
    {
       vetor3[i] = vetor1[i] + vetor2[i];
    }
    for(i = 0; i < 5; i++)
    {
    cout<< vetor3[i] <<"\t";
    }
}
