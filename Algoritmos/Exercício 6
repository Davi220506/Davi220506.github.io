#include<iostream>
using namespace std;

int InverteVetor(int v[4])
{
     int i = 0;
     int k;
     for (int j = 3; j > i; j--)
        {
            k = v[j];
            v[j] = v[i];
            v[i] = k;
            i = i + 1;
        }
}

main ()
{
   int v[4];

   for (int i = 0 ; i < 4; i ++)
   {
   	  cout << "Insira o valor do vetor: ";
   	  cin >> v[i];
   }

    cout<<"\nVETOR DIGITADO\n";

    for(int i = 0; i < 4; i++)
    {
        cout <<v[i];
    }

   cout<<"\n\nVETOR INVERTIDO\n";

	InverteVetor(v);

	 for (int i = 0 ; i < 4; i++)
     {
     	cout<< v[i];
	 }
}
