#include<iostream>
using namespace std;

main()
{
    int M[3][2],T[2][3],l, c;//l = linha / c = coluna;

    for(l = 0; l < 2; l++)
    {
        for(c = 0; c < 3; c++)
        {
            cout<<"Digite os valores da matriz: ";
            cin>>M[c][l];

        }
    }

     cout<<"MATRIZ ORIGINAL\n\n";

     for(l = 0; l < 3; l++)
     {
         for(c = 0; c < 2; c++)
         {
             cout<<M[l][c] << " \t " ;
         }
         cout << endl;
     }

     for(l = 0; l < 3; l++)
     {
         for(c = 0; c < 2; c++)
         {
             T[c][l] = M[l][c];

         }
     }

     cout<<"\nTRANSPORTA \n";

     for(l = 0; l < 2; l++)
     {
         for(c = 0; c < 3; c++)
         {
             cout<<T[l][c] << "\t";
         }
         cout << endl ;
     }
}
