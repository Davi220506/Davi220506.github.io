#include<iostream>
using namespace std;

int main()
{
    int vetor1[3], vetor2[3], i;

    for(i = 0; i < 3; i++)
    {
        cout<<"Escreva os vetores: ";
        cin>> vetor1[i];
    }
    for(i = 0; i < 3; i++)
    {
        vetor2[i] = vetor1[i];
    }

    cout<<"\n PRIMEIRO VETOR \n \n";

    for(i = 0; i < 3; i++)
    {
        cout<<vetor1[i] <<"\n \n";
    }


    cout<<"VETORES COPIADOS \n \n";

    for(i = 0; i < 3; i++)
    {
        cout<<vetor2[i] <<"\n\n";
    }

}
