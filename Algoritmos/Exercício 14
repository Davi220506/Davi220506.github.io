#include <iostream>
using namespace std;

main()
{
    int mat[5][5], l, c, soma1 = 0, soma2 = 0, soma3 = 0, soma4 = 0, soma5 = 0, x = 0, y = 1;

    for(l = 0; l < 5; l++)
    {
        for(c = 0; c < 5; c++)
        {
            cout<<"Insira os valores da matriz: ";
            cin>>mat[l][c];
        }
    }

    for(l = 0; l < 5; l++)
    {
        for(c = 0; c < 5; c++)
       {
        if(l == 3)
        soma1 = soma1 + mat[l][c];
       }
    }
    cout<<"\n\nSOMA DA LINHA 4\n\n";
    cout<<soma1;

       for(l = 0; l < 5; l++)
    {
        for(c = 0; c < 5; c++)
       {
        if(c == 1)
        soma2 = soma2 + mat[l][c];
       }
    }
    cout<<"\n\nSOMA DA COLUNA 2\n\n";
    cout<<soma2;

    for(l = 0; l < 5; l++)
    {
       soma3 = soma3 + mat[l][x];
       x++;
    }

    cout<<"\n\nSOMA DA DIAGONAL PRINCIPAL\n\n";
    cout<<soma3;

       for(l = 0; l < 5; l++)
    {
       soma4 = soma4 + mat[l][y];
       y++;
    }

    cout<<"\n\nSOMA DA DIAGONAL SECUNDARIA\n\n";
    cout<<soma4;

    for(l = 0; l < 5; l++)
    {
        for(c = 0; c < 5; c++)
        {
            soma5 = soma5 + mat[l][c];
        }
    }

    cout<<"\n\nSOMA DE TODOS ELEMENTOS DA MATRIZ\n\n";
    cout<<soma5;


    cout<<"\n\nMATRIZ ESCOLHIDA\n\n";

    for(l = 0; l < 5; l++)
    {
        for(c = 0; c < 5; c++)
        {
            cout<<mat[l][c]<<" ";
        }
        cout<<endl;
    }

}

