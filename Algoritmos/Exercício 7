#include<iostream>
using namespace std;

int ValMultPeloIndice( int v[5])
{
	 for ( int i = 0; i < 5; i++)
	 {
	 	v[i] = v[i] * i ;
	 }
}

int main ( )
{
	int v[5];

   for(int i = 0 ; i < 5 ; i ++ )
   {
   	  cout << "Insira os valores do vetor: ";
   	  cin >> v[i];
   }

   cout<<"VETORES DIGITADOS\n";

   for(int i = 0 ; i < 5 ; i ++ )
   {
   	  cout<< v[i];
   }

   cout<<"\nVETORES MULTIPLICADOS\n";

	ValMultPeloIndice(v);

	 for ( int i = 0 ; i < 5 ; i++)
     {
     	cout<<v[i] <<"\t";
	 }
}
