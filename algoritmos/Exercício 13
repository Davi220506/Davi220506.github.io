#include <iostream>
using namespace std;

main()
{
    int mat[4][4], l, c, soma = 0, x = 0;

    for(l = 0; l < 4; l++)
    {
        for(c = 0; c < 4; c++)
        {
        cout<<"Insira os valores das matrizes: ";
        cin>>mat[l][c];
        }
    }

    for(l = 0; l < 4; l++)
    {
        for(c = 0; c < 4; c++)
        {
            cout<<mat[l][c] <<" ";
        }
        cout<<endl;
    }

    for(l = 0; l < 4; l++)
    {
       soma = soma + mat[l][x];
       x++;
    }

    cout<<"\nO valor da soma e: "<<soma;
}
